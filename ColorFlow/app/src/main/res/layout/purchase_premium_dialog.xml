<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/purchase_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="BUY PREMIUM"
        android:textSize="30sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:text="Price: 0,99â‚¬"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/purchase_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:text="With Gradients Premium you gain access to:\n    - An ad-free experience\n    - All future game modes\n    - Our love and gratitude!"
        android:textColor="@android:color/white"
        />

    <!--<android.support.design.widget.TextInputLayout
        android:id="@+id/purchase_promo_code_layout"
        app:hintEnabled="true"
        android:foregroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:padding="16dp"
        android:hint="Enter promo code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.TextInputLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/purchase_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:paddingLeft="16dp"
            android:textColor="@android:color/white"
            android:text="CANCEL"/>

        <TextView
            android:id="@+id/purchase_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:paddingRight="16dp"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:text="BUY"/>

    </LinearLayout>

</LinearLayout>